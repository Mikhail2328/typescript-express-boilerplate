{
  "name": "typescript-express-boilerplate",
  "version": "1.0.0",
  "description": "Node.js Express TypeScript boilerplate",
  "main": "dist/server.js",
  "scripts": {
    "build": "swc src --out-dir dist/",
    "build:watch": "swc src -w --out-dir dist/",
    "start": "node dist/src/server.js",
    "dev": "nodemon --exec \"swc src -d dist --copy-files && node dist/src/server.js\" --watch src --ext ts,js,json",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "pm2": "pm2 start ecosystem.config.cjs",
    "pm2:prod": "pm2 start ecosystem.config.cjs --env production"
  },
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "boilerplate",
    "api",
    "rest",
    "backend",
    "starter"
  ],
  "author": "m1iv",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "pm2": "^6.0.8"
  },
  "devDependencies": {
    "@swc/cli": "^0.7.8",
    "@swc/core": "^1.13.3",
    "@swc/plugin-transform-imports": "^9.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.4",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
